{
  "compilerOptions": {
    /* Base Options */
    "target": "ES2020",
    "module": "NodeNext",        
    "moduleResolution": "NodeNext", 
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    
    /* Strictness Checks */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    
    /* Path Configuration */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@server/*": ["server/*"],
      "@client/*": ["client/*"],
      "@shared/*": ["shared/*"]
    },
    
    /* Output Configuration */
    "outDir": "dist",
    
    /* React Configuration */
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM", "DOM.Iterable"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "server/**/*.ts",
    "client/**/*.ts",
    "client/**/*.tsx",
    "shared/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}